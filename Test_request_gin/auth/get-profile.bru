meta {
  name: Get Profile
  type: http
  seq: 4
}

get {
  url: {{baseUrl}}/profile
  body: none
  auth: bearer
}

headers {
  Accept: application/json
  Authorization: Bearer {{authToken}}
}

auth:bearer {
  token: {{authToken}}
}

vars:pre-request {
  baseUrl: http://localhost:8082
}

tests {
  test("Status code is 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("Response is an object", function() {
    expect(res.getBody()).to.be.an('object');
  });
  
  test("User object has required fields", function() {
    const user = res.getBody();
    expect(user).to.have.property('id');
    expect(user).to.have.property('email');
    expect(user).to.have.property('name');
  });
  
  test("Password is not in response", function() {
    const user = res.getBody();
    expect(user).to.not.have.property('password');
  });
  
  test("Email matches registered user", function() {
    const user = res.getBody();
    expect(user.email).to.equal("test@example.com");
  });
}
