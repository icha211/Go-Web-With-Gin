meta {
  name: Get Album Not Found
  type: http
  seq: 4
}

get {
  url: {{baseUrl}}/albums/{{albumId}}
  body: none
  auth: none
}

headers {
  Accept: application/json
}

vars:pre-request {
  baseUrl: http://localhost:8082
  albumId: 999
}

vars:post-response {
  albumId: 999
}

tests {
  test("Status code is 404", function() {
    expect(res.getStatus()).to.equal(404);
  });
  
  test("Response is an object", function() {
    expect(res.getBody()).to.be.an('object');
  });
  
  test("Error message is correct", function() {
    expect(res.getBody().message).to.equal("album not found");
  });
  
  test("Response has message property", function() {
    expect(res.getBody()).to.have.property('message');
  });
}
