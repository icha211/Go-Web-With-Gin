meta {
  name: Verify Album Created
  type: http
  seq: 6
}

get {
  url: {{baseUrl}}/albums
  body: none
  auth: none
}

headers {
  Accept: application/json
}

vars:pre-request {
  baseUrl: http://localhost:8082
}

tests {
  test("Status code is 200", function() {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("Response is an array", function() {
    expect(res.getBody()).to.be.an('array');
  });
  
  test("Album with ID 5 exists", function() {
    const albums = res.getBody();
    const album = albums.find(a => a.id === "5");
    expect(album).to.exist;
  });
  
  test("Created album has correct data", function() {
    const albums = res.getBody();
    const album = albums.find(a => a.id === "5");
    if (album) {
      expect(album.title).to.equal("Kind of Blue");
      expect(album.artist).to.equal("Miles Davis");
      expect(album.price).to.equal(45.99);
    }
  });
  
  test("Total albums count increased", function() {
    const albums = res.getBody();
    expect(albums.length).to.be.at.least(4);
  });
}
